auto lo
iface lo inet loopback
    address 10.2.1.4
    netmask 255.255.255.255

auto eth0
iface eth0 inet dhcp

# bond to leafs

auto bond-leaf1-2
allow-leafs bond-leaf1-2
iface bond-leaf1-2
    bond-slaves swp49 swp50 swp51 swp52
    bond-mode 802.3ad
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4

# Bridge that connects our peer and downlinks to the leafs

auto bridge
iface bridge
    bridge-vlan-aware yes
    bridge-vids 100-2000
    bridge-pvid 1
    bridge-ports peer bond-leaf1-2
    bridge-stp on
#    bridge-port-vids peer=100-2000 bond-leaf1-2=100-2000
#    bridge-port-pvids peer=1 bond-leaf1-2=1

#mlag

auto peer
iface peer
    bond-slaves swp17
    bond-mode 802.3ad
    bond-miimon 100
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4

auto peer.4000
iface peer.4000
    address 169.254.99.2/30
    down ip addr flush dev $IFACE
