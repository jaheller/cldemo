auto lo
iface lo inet loopback
    address 10.2.1.4
    netmask 255.255.255.255

auto eth0
iface eth0 inet dhcp

# bond to leafs

auto bond-leaf1-2
allow-leafs bond-leaf1-2
iface bond-leaf1-2
    bond-slaves swp49 swp50 swp51 swp52
    bond-mode 802.3ad
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4
    bond-miimon 100
    mtu 9000

# Bridge that connects our peer and downlinks to the leafs

auto bridge
iface bridge
    bridge-ports peer bond-leaf1-2
    bridge-stp on
    bridge-vlan-aware yes
    bridge-vids 1000-1050
    bridge-pvid 1

#clag

auto peerlink
iface peerlink
    bond-slaves swp17 swp18
    bond-mode 802.3ad
    bond-miimon 100
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4
    mtu 9000

auto peerlink.4093
iface peerlink.4093
    address 169.254.1.2/30
