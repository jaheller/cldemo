auto lo
iface lo inet loopback
    address 10.2.1.1
    netmask 255.255.255.255

auto eth0
iface eth0 inet dhcp

# Bond to the spines
# auto uplink
# iface uplink
#     bond-slaves swp1s0 swp1s1 swp1s2 swp1s3
#     bond-mode 802.3ad
#     bond-miimon 100
#     bond-use-carrier 1
#     bond-lacp-rate 1
#     bond-min-links 1
#     bond-xmit-hash-policy layer3+4
# 

# Bond to server1
auto esx-server1
allow-hosts esx-server1
iface esx-server1
    bond-slaves swp32s0
    bond-mode 802.3ad
    bond-miimon 100
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4
    mtu 9000
    mstpctl-bpduguard yes

# Bond to server2
auto esx-server2
allow-hosts esx-server2
iface esx-server2
    bond-slaves swp32s1
    bond-mode 802.3ad
    bond-miimon 100
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4
    mtu 9000
    mstpctl-bpduguard yes

# Bridge that connects peer, uplink to spines, and hosts
auto bridge
iface bridge
    bridge-vlan-aware yes
    bridge-vids 1000-1050
    bridge-pvid 1
    bridge-ports peerlink esx-server1 esx-server2
    bridge-stp on

# clag
auto peerlink
iface peerlink
    bond-slaves swp17 swp18
    bond-mode 802.3ad
    bond-miimon 100
    bond-use-carrier 1
    bond-lacp-rate 1
    bond-min-links 1
    bond-xmit-hash-policy layer3+4
    mtu 9000

auto peerlink.4094
iface peerlink.4094
    address 169.254.1.1/30
